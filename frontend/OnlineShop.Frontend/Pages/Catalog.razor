@page "/catalog"
@using OnlineShop.Frontend.Components

<div style="background-color:beige; border-radius:5px; padding:50px;">
	<h1 style="text-align:center;">Shop Catalog</h1>
	<button @onclick="OpenAddProduct" style="display:inline-block; background-color:dodgerblue; padding:5px; border-radius:5px; margin:5px;">Add Product</button>
	<hr style="height:3px; background-color:black; border:none; margin-bottom:15px;" />
	<MudGrid>
		@if(_products is null)
		{
			<div style="margin:5px;">Loading...</div>
			<MudProgressCircular Color="Color.Default" Indeterminate="true" />
		}
		else
		{
			foreach (var product in _products)
			{
				<div @onclick="() => OpenProductById(product)" style="margin:5px;">
					<ProductItem Product="@product" />
				</div>
			}
		}
	</MudGrid>
</div>





